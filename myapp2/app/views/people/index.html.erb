<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Lista de Personas</h1>

  <table class="table">
  <thead>
      <tr>
        <th>Identification</th>
        <th>Document</th>
        <th>First name</th>
        <th>Second name</th>
        <th>First last name</th>
        <th>Second last name</th>
        <th>Role</th>
        <th colspan="3">Action</th>
      </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.identification %></td>
        <td><%= person.document.document_type %></td>
        <td><%= person.first_name %></td>
        <td><%= person.second_name %></td>
        <td><%= person.first_last_name %></td>
        <td><%= person.second_last_name %></td>
        <td><%= person.role.role_name %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person_path(person), method: :delete, data: { confirm: 'Â¿Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Person', new_person_path %>

</div>